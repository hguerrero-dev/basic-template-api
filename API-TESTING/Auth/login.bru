meta {
  name: login
  type: http
  seq: 1
}

post {
  url: {{base_url}}login
  body: json
  auth: inherit
}

body:json {
  {
    "username": "egraell",
    "password": "password"
  }
}

script:post-response {
  // Verificamos que el login fue exitoso (status 200)
  if (res.status === 200) {
      // Tomamos el token de la respuesta JSON
      const token = res.body.access_token;
      
      // Guardamos el token en una variable de entorno llamada 'token'
      bru.setEnvVar("token", token);
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
